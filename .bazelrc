build --action_env BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1

build --cxxopt='-std=c++17'
build --host_cxxopt='-std=c++17'
build --cxxopt='-fdiagnostics-color=always'
build --host_cxxopt='-fdiagnostics-color=always'

build --noincompatible_sandbox_hermetic_tmp
build --sandbox_add_mount_pair=/tmp
build -c fastbuild
common --incompatible_use_plus_in_repo_names

build:lto --strip=always
build:lto --copt=-flto=thin
build:lto --cxxopt=-flto=thin
build:lto --linkopt=-flto=thin

build --incompatible_strict_action_env
build --noincompatible_remote_symlinks
build --experimental_inprocess_symlink_creation
build --nobuild_runfile_links
build --noincompatible_remote_dangling_symlinks
build --remote_download_outputs=minimal
build --experimental_remote_merkle_tree_cache
build --remote_cache_compression
build --experimental_remotable_source_manifests
build --nolegacy_important_outputs
common --incompatible_allow_tags_propagation
test --incompatible_exclusive_test_sandboxed
build --incompatible_strict_action_env
build --modify_execution_info=PackageTar=+no-remote
build --incompatible_default_to_explicit_init_py
build --reuse_sandbox_directories
build --nolegacy_external_runfiles

try-import %workspace%/.bazelrc.user

common --registry=https://bcr.bazel.build
common --registry=file://%workspace%/../fathom_api/bzlmod-registry
